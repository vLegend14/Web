---
import PdfLayout from "../../layouts/LayoutPDF.astro";
import DenunciaForm from "../../components/formulario-denuncia.astro"
import { withBase } from "@/utils/url";

const pdf = withBase("/docs/PROTOCOLO-DE-PREVENCION-DEL-ACOSO-SEXUAL-LABORAL-Y-VIOLENCIA-EN-EL-TRABAJO.pdf");
---

<PdfLayout
  pageTitle="Formulario de denuncias, Ley Karin – PROTEC · CHILE"
  desc="Formulario de denuncias, Ley Karin - PROTEC Chile"
  title="Formulario de denuncias, Ley Karin"
  pdfUrl={pdf}
>
<div class="mt-4 text-center">
  <a
    href={withBase("/ley-karin/denuncia/")}
    class="inline-flex items-center justify-center
           rounded-xl px-4 py-4
           bg-protec-600 text-white
           text-sm font-semibold tracking-wide
           hover:bg-protec-500 active:bg-protec-700
           ring-1 ring-white/10 shadow-lg
           transition"
  >
    Acceder al formulario de denuncias
  </a>

  <p class="mt-3 text-xs text-protec-100/80">
    Este formulario es confidencial y cumple con la Ley Karin.
  </p>
</div>
</PdfLayout>