---
/* =========================
   TIPOS
   ========================= */

interface ContactItem {
  icon: string;
  label?: string;
  value: string;
  href: string;
}

interface Props {
  title?: string;
  subtitleStrong?: string;
  paragraphs?: string[];
  highlight?: string;
  isoText?: string;
  privacyNote?: string;
  contactTitle?: string;
  contactItems?: ContactItem[];
  certTitle?: string;
  certImage?: string;
  certAlt?: string;
  certCaption?: string;
}

/* =========================
   PROPS + DEFAULTS
   ========================= */

const {
  title = "PROTEC CHILE",
  subtitleStrong = "Sociedad Profesionales de la Seguridad PROTEC CHILE.",
  paragraphs = [
    "Empresa fundada el 01 de Septiembre de 1988, por expertos en el 谩mbito de la Seguridad Privada y Administraci贸n de Recursos Humanos, contando entre nuestros clientes a importantes empresas y entidades del Pa铆s.",
    "En la actualidad abarcamos toda la gama de Servicios, Recursos Humanos y Equipamiento necesario para atender los requerimientos de la Seguridad y Servicios de Apoyo a las Empresas contratantes.",
    "Es para nuestra organizaci贸n una gran satisfacci贸n el poder apoyar a quienes tienen la responsabilidad de la Seguridad Privada, de las empresas e instituciones, a resolver sus problemas en forma eficiente, aplicando la tecnolog铆a y los est谩ndares que PROTEC CHILE utiliza en el Pa铆s, con un staff de especialistas y profesionales dirigiendo y apoyando las operaciones.",
  ],
  highlight = "Primera Empresa de Seguridad en CHILE, en Certificar Internacionalmente sus Servicios.",
  isoText = "ISO 9001",
  privacyNote = "Resguardo Absoluto de Privacidad y Datos Personales 贸 Empresariales, de Todos Nuestros Distinguidos Clientes.",
  contactTitle = "DATOS DE CONTACTO",
  contactItems = [
    { icon: "锔", label: "FONO CONTACTO", value: "600 620 9 620", href: "tel:6006209620" },
    { icon: "", value: "+56 9 5159 4960", href: "tel:+56951594960" },
    { icon: "锔", value: "contacto@protec.cl", href: "mailto:contacto@protec.cl" },
  ],
  certTitle = "CERTIFICACIN INTERNACIONAL",
  certImage = "/img/certificacion.png",
  certAlt = "Certificaci贸n ISO 9001",
  certCaption = "",
} = Astro.props as Props;
---

<section class="w-full bg-protec-900 text-protec-50">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid lg:grid-cols-3 gap-10 items-start">

      <!-- ===================== -->
      <!-- COLUMNA IZQUIERDA     -->
      <!-- ===================== -->
      <div class="lg:col-span-2">
        <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight text-white">
          {title}
        </h2>

        <p class="mt-4 font-semibold text-protec-100">
          {subtitleStrong}
        </p>

        <div class="mt-6 space-y-5 text-protec-100/90 leading-relaxed">
          {paragraphs.map((p) => (
            <p>{p}</p>
          ))}
        </div>

        <p class="mt-8 font-bold text-white">
          {highlight}
        </p>

        <p class="mt-4 inline-flex items-center gap-2 font-extrabold tracking-wide text-protec-200">
          <span class="inline-flex h-7 items-center rounded-full bg-protec-800/70 px-3 ring-1 ring-white/10">
            {isoText}
          </span>
        </p>

        <p class="mt-10 text-xs text-protec-100/70">
          {privacyNote}
        </p>
      </div>

      <!-- ===================== -->
      <!-- COLUMNA DERECHA      -->
      <!-- ===================== -->
      <aside class="lg:col-span-1">
        <div class="rounded-2xl bg-protec-950/40 ring-1 ring-white/10 p-6 shadow-[0_20px_60px_-30px_rgba(0,0,0,0.8)]">

          <!-- CONTACTO -->
          <h3 class="text-[11px] font-extrabold tracking-[0.22em] uppercase text-protec-100/80">
            {contactTitle}
          </h3>

          <div class="mt-4 space-y-3">
            {contactItems.map((item) => (
              <div class="flex items-start gap-3">
                <span class="mt-0.5">{item.icon}</span>

                <div class="text-sm">
                  {item.label && (
                    <div class="font-semibold text-protec-50">
                      {item.label}
                    </div>
                  )}

                  <a
                    href={item.href}
                    class="text-protec-100/90 hover:text-white underline-offset-4 hover:underline decoration-white/20 hover:decoration-white/60 transition-colors"
                  >
                    {item.value}
                  </a>
                </div>
              </div>
            ))}
          </div>

          <hr class="my-6 border-white/10" />

          <!-- CERTIFICACIN -->
          <h3 class="text-[11px] font-extrabold tracking-[0.22em] uppercase text-protec-100/80">
            {certTitle}
          </h3>

          <div class="mt-4 rounded-xl bg-protec-900/50 ring-1 ring-white/10 p-3">
            <img
              src={certImage}
              alt={certAlt}
              class="w-full h-auto object-contain"
              loading="lazy"
              decoding="async"
            />

            {certCaption && (
              <p class="mt-2 text-xs text-protec-100/70 text-center">
                {certCaption}
              </p>
            )}
          </div>

        </div>
      </aside>

    </div>
  </div>
</section>
